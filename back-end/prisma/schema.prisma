generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//rolul utilizatorilor
enum MemberRole {
  MP
  TST
}

//severitatea unui bug
enum BugSeverity {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

//prioritatea de rezolvare a bug-ului
enum BugPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

//starea curenta a bug-ului
enum BugStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
  CLOSED
}

//tipul de notificari
enum NotificationType {
  BUG_REPORTED
  BUG_ASSIGNED
  BUG_RESOLVED
  GENERIC
}

//tabela USER
model User {
  id           String   @id @default(uuid()) //primary-key
  email        String   @unique
  passwordHash String
  name         String
  xp           Int      @default(0)
  level        Int      @default(1)
  createdAt    DateTime @default(now()) //timestamp automat la inserare
  updatedAt    DateTime @updatedAt

  //relatiile 1-N

  projectsCreated Project[]          @relation("ProjectsCreated")
  memberships     ProjectMember[]
  bugsReported    Bug[]              @relation("BugsReported")
  bugsAssigned    Bug[]              @relation("BugsAssigned")
  comments        BugComment[]
  statusActions   BugStatusHistory[] @relation("StatusChangedBy")
  notifications   Notification[]
  xpLogs          XPChangeLog[]
}

//tabela PROJECT
model Project {
  id          String   @id @default(uuid()) //primary-key
  name        String
  description String?
  repoUrl     String
  createdById String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  //foreign-key
  createdBy User @relation("ProjectsCreated", fields: [createdById], references: [id], onDelete: Cascade)
  members   ProjectMember[]
  bugs      Bug[]

  @@index([createdById])
}

//tabela PROJECTMEMBER
model ProjectMember {
  id        String     @id @default(uuid()) //primary-key
  projectId String
  userId    String
  role      MemberRole
  createdAt DateTime   @default(now())

  //foreign-key

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([projectId, userId])
  @@index([userId])
  @@index([projectId])
}

//tabela BUG
model Bug {
  id          String      @id @default(uuid()) //primary-key
  projectId   String
  reporterId  String
  assignedId  String?
  title       String
  description String
  severity    BugSeverity
  priority    BugPriority
  status      BugStatus   @default(OPEN)
  commitUrl   String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  //foreign-key
  project  Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  reporter User    @relation("BugsReported", fields: [reporterId], references: [id])
  assigned User?   @relation("BugsAssigned", fields: [assignedId], references: [id])

  //relatii 1-N
  comments  BugComment[]
  history   BugStatusHistory[]
  xpChanges XPChangeLog[]      @relation("BugXPChanges")

  @@index([projectId])
  @@index([status, priority])
  @@index([assignedId])
}

//tabela BUGCOMMENT
model BugComment {
  id        String   @id @default(uuid()) //primary-key
  bugId     String
  authorId  String
  content   String
  createdAt DateTime @default(now())

  //foreign-key
  bug    Bug  @relation(fields: [bugId], references: [id], onDelete: Cascade)
  author User @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@index([bugId])
  @@index([authorId])
}

//tabela BUGSTATUSHISTORY
model BugStatusHistory {
  id          String     @id @default(uuid()) //primary-key
  bugId       String
  changedById String
  fromStatus  BugStatus?
  toStatus    BugStatus
  commitUrl   String?
  note        String?
  createdAt   DateTime   @default(now())

  //foreign-key
  bug       Bug  @relation(fields: [bugId], references: [id], onDelete: Cascade)
  changedBy User @relation("StatusChangedBy", fields: [changedById], references: [id], onDelete: Cascade)

  @@index([bugId])
  @@index([changedById])
}

//tabela NOTIFICATION
model Notification {
  id        String           @id @default(uuid()) //primary-key
  userId    String
  type      NotificationType
  message   String
  readAt    DateTime?
  createdAt DateTime         @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, readAt])
}

//tabela XPCHANGELOG
model XPChangeLog {
  id        String   @id @default(uuid()) //primary-key
  userId    String
  delta     Int
  reason    String
  bugId     String?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  bug  Bug? @relation("BugXPChanges", fields: [bugId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([bugId])
}
